{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "conversation-processor-server/tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "tsc: build - conversation-processor-server/tsconfig.json"
    },
    {
      "label": "Start Development Environment",
      "type": "shell",
      "command": "chmod +x ./dev.sh && ./dev.sh",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "."
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Development environment ready",
          "endsPattern": "Development environment ready"
        }
      }
    }
  ]
}
